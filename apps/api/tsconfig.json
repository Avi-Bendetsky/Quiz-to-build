{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/api",
    "rootDir": ".",
    "baseUrl": ".",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@libs/database": [
        "../../libs/database/dist"
      ],
      "@libs/database/*": [
        "../../libs/database/dist/*"
      ],
      "@libs/redis": [
        "../../libs/redis/dist"
      ],
      "@libs/redis/*": [
        "../../libs/redis/dist/*"
      ],
      "@libs/shared": [
        "../../libs/shared/dist"
      ],
      "@libs/shared/*": [
        "../../libs/shared/dist/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}