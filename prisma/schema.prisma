// Prisma Schema for Adaptive Client Questionnaire System
// Based on: docs/cto/05-data-models-db-architecture.md

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// ENUMS
// =============================================================================

enum UserRole {
  CLIENT
  DEVELOPER
  ADMIN
  SUPER_ADMIN
}

enum QuestionType {
  TEXT
  TEXTAREA
  NUMBER
  EMAIL
  URL
  DATE
  SINGLE_CHOICE
  MULTIPLE_CHOICE
  SCALE
  FILE_UPLOAD
  MATRIX
}

enum SessionStatus {
  IN_PROGRESS
  COMPLETED
  ABANDONED
  EXPIRED
}

enum VisibilityAction {
  SHOW
  HIDE
  REQUIRE
  UNREQUIRE
}

enum DocumentCategory {
  CTO
  CFO
  BA
}

enum DocumentStatus {
  PENDING
  GENERATING
  GENERATED
  PENDING_REVIEW
  APPROVED
  REJECTED
  FAILED
}

enum StandardCategory {
  MODERN_ARCHITECTURE
  AI_ASSISTED_DEV
  CODING_STANDARDS
  TESTING_QA
  SECURITY_DEVSECOPS
  WORKFLOW_OPS
  DOCS_KNOWLEDGE
}

// =============================================================================
// ORGANIZATION & USER MODELS
// =============================================================================

model Organization {
  id           String    @id @default(uuid())
  name         String
  slug         String    @unique
  settings     Json      @default("{}")
  subscription Json      @default("{}")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  deletedAt    DateTime? @map("deleted_at")

  users User[]

  @@index([slug])
  @@index([createdAt])
  @@map("organizations")
}

model User {
  id                  String    @id @default(uuid())
  organizationId      String?   @map("org_id")
  email               String    @unique
  emailVerified       Boolean   @default(false) @map("email_verified")
  passwordHash        String?   @map("password_hash")
  role                UserRole  @default(CLIENT)
  profile             Json      @default("{}")
  preferences         Json      @default("{}")
  mfaEnabled          Boolean   @default(false) @map("mfa_enabled")
  mfaSecret           String?   @map("mfa_secret")
  lastLoginAt         DateTime? @map("last_login_at")
  lastLoginIp         String?   @map("last_login_ip")
  failedLoginAttempts Int       @default(0) @map("failed_login_attempts")
  lockedUntil         DateTime? @map("locked_until")
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")
  deletedAt           DateTime? @map("deleted_at")

  organization   Organization?   @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  sessions       Session[]
  auditLogs      AuditLog[]
  apiKeys        ApiKey[]
  refreshTokens  RefreshToken[]
  createdQuestionnaires Questionnaire[] @relation("QuestionnaireCreator")
  approvedDocuments     Document[]      @relation("DocumentApprover")

  @@index([email])
  @@index([organizationId])
  @@index([role])
  @@index([createdAt])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  revokedAt DateTime? @map("revoked_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

model ApiKey {
  id         String    @id @default(uuid())
  userId     String    @map("user_id")
  name       String
  keyPrefix  String    @map("key_prefix")
  keyHash    String    @map("key_hash")
  scopes     String[]
  rateLimit  Int       @default(1000) @map("rate_limit")
  lastUsedAt DateTime? @map("last_used_at")
  expiresAt  DateTime? @map("expires_at")
  createdAt  DateTime  @default(now()) @map("created_at")
  revokedAt  DateTime? @map("revoked_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([keyPrefix])
  @@map("api_keys")
}

// =============================================================================
// QUESTIONNAIRE MODELS
// =============================================================================

model Questionnaire {
  id            String    @id @default(uuid())
  name          String
  description   String?
  industry      String?
  version       Int       @default(1)
  isActive      Boolean   @default(true) @map("is_active")
  isDefault     Boolean   @default(false) @map("is_default")
  estimatedTime Int?      @map("estimated_time")
  metadata      Json      @default("{}")
  createdById   String?   @map("created_by")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  publishedAt   DateTime? @map("published_at")

  createdBy User? @relation("QuestionnaireCreator", fields: [createdById], references: [id])
  sections  Section[]
  sessions  Session[]

  @@index([industry])
  @@index([isActive])
  @@map("questionnaires")
}

model Section {
  id              String   @id @default(uuid())
  questionnaireId String   @map("questionnaire_id")
  name            String
  description     String?
  orderIndex      Int      @map("order_index")
  icon            String?
  estimatedTime   Int?     @map("estimated_time")
  metadata        Json     @default("{}")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  questionnaire Questionnaire @relation(fields: [questionnaireId], references: [id], onDelete: Cascade)
  questions     Question[]
  currentSessions Session[] @relation("CurrentSection")

  @@index([questionnaireId])
  @@index([questionnaireId, orderIndex])
  @@map("sections")
}

model Question {
  id               String       @id @default(uuid())
  sectionId        String       @map("section_id")
  text             String
  type             QuestionType
  helpText         String?      @map("help_text")
  explanation      String?
  placeholder      String?
  orderIndex       Int          @map("order_index")
  isRequired       Boolean      @default(false) @map("is_required")
  options          Json?
  validationRules  Json?        @map("validation_rules")
  defaultValue     Json?        @map("default_value")
  suggestedAnswer  Json?        @map("suggested_answer")
  industryTags     String[]     @map("industry_tags")
  documentMappings Json?        @map("document_mappings")
  metadata         Json         @default("{}")
  createdAt        DateTime     @default(now()) @map("created_at")
  updatedAt        DateTime     @updatedAt @map("updated_at")

  section          Section          @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  visibilityRules  VisibilityRule[]
  responses        Response[]
  currentSessions  Session[]        @relation("CurrentQuestion")

  @@index([sectionId])
  @@index([sectionId, orderIndex])
  @@index([type])
  @@map("questions")
}

model VisibilityRule {
  id                String           @id @default(uuid())
  questionId        String           @map("question_id")
  condition         Json
  action            VisibilityAction
  targetQuestionIds String[]         @map("target_question_ids")
  priority          Int              @default(0)
  isActive          Boolean          @default(true) @map("is_active")
  createdAt         DateTime         @default(now()) @map("created_at")
  updatedAt         DateTime         @updatedAt @map("updated_at")

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([questionId])
  @@map("visibility_rules")
}

// =============================================================================
// SESSION MODELS
// =============================================================================

model Session {
  id                   String        @id @default(uuid())
  userId               String        @map("user_id")
  questionnaireId      String        @map("questionnaire_id")
  questionnaireVersion Int           @map("questionnaire_version")
  status               SessionStatus @default(IN_PROGRESS)
  industry             String?
  progress             Json          @default("{\"percentage\": 0, \"answered\": 0, \"total\": 0}")
  currentSectionId     String?       @map("current_section_id")
  currentQuestionId    String?       @map("current_question_id")
  adaptiveState        Json          @default("{}")
  metadata             Json          @default("{}")
  startedAt            DateTime      @default(now()) @map("started_at")
  lastActivityAt       DateTime      @default(now()) @map("last_activity_at")
  completedAt          DateTime?     @map("completed_at")
  expiresAt            DateTime?     @map("expires_at")

  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionnaire   Questionnaire @relation(fields: [questionnaireId], references: [id])
  currentSection  Section?      @relation("CurrentSection", fields: [currentSectionId], references: [id])
  currentQuestion Question?     @relation("CurrentQuestion", fields: [currentQuestionId], references: [id])
  responses       Response[]
  documents       Document[]

  @@index([userId])
  @@index([questionnaireId])
  @@index([status])
  @@index([startedAt])
  @@index([userId, status])
  @@map("sessions")
}

model Response {
  id               String   @id @default(uuid())
  sessionId        String   @map("session_id")
  questionId       String   @map("question_id")
  value            Json
  isValid          Boolean  @default(true) @map("is_valid")
  validationErrors Json?    @map("validation_errors")
  timeSpentSeconds Int?     @map("time_spent_seconds")
  revision         Int      @default(1)
  answeredAt       DateTime @default(now()) @map("answered_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  session  Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id])

  @@unique([sessionId, questionId])
  @@index([sessionId])
  @@index([questionId])
  @@index([answeredAt])
  @@map("responses")
}

// =============================================================================
// DOCUMENT MODELS
// =============================================================================

model DocumentType {
  id               String           @id @default(uuid())
  name             String
  slug             String           @unique
  description      String?
  category         DocumentCategory
  templatePath     String?          @map("template_path")
  requiredQuestions String[]        @map("required_questions")
  outputFormats    String[]         @default(["PDF", "DOCX"]) @map("output_formats")
  estimatedPages   Int?             @map("estimated_pages")
  isActive         Boolean          @default(true) @map("is_active")
  metadata         Json             @default("{}")
  createdAt        DateTime         @default(now()) @map("created_at")
  updatedAt        DateTime         @updatedAt @map("updated_at")

  documents         Document[]
  standardMappings  DocumentTypeStandard[]

  @@index([category])
  @@index([isActive])
  @@map("document_types")
}

model Document {
  id                 String         @id @default(uuid())
  sessionId          String         @map("session_id")
  documentTypeId     String         @map("document_type_id")
  status             DocumentStatus @default(PENDING)
  format             String         @default("PDF")
  storageUrl         String?        @map("storage_url")
  fileName           String?        @map("file_name")
  fileSize           BigInt?        @map("file_size")
  pageCount          Int?           @map("page_count")
  version            Int            @default(1)
  generationMetadata Json?          @map("generation_metadata")
  reviewStatus       Json           @default("{}")  @map("review_status")
  approvedById       String?        @map("approved_by")
  approvedAt         DateTime?      @map("approved_at")
  rejectionReason    String?        @map("rejection_reason")
  generatedAt        DateTime?      @map("generated_at")
  expiresAt          DateTime?      @map("expires_at")
  createdAt          DateTime       @default(now()) @map("created_at")
  updatedAt          DateTime       @updatedAt @map("updated_at")

  session      Session      @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  documentType DocumentType @relation(fields: [documentTypeId], references: [id])
  approvedBy   User?        @relation("DocumentApprover", fields: [approvedById], references: [id])

  @@index([sessionId])
  @@index([documentTypeId])
  @@index([status])
  @@index([generatedAt])
  @@map("documents")
}

// =============================================================================
// AUDIT & SECURITY MODELS
// =============================================================================

model AuditLog {
  id           String   @id @default(uuid())
  userId       String?  @map("user_id")
  action       String
  resourceType String   @map("resource_type")
  resourceId   String?  @map("resource_id")
  changes      Json?
  ipAddress    String?  @map("ip_address")
  userAgent    String?  @map("user_agent")
  requestId    String?  @map("request_id")
  createdAt    DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([action])
  @@index([resourceType, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

// =============================================================================
// ENGINEERING STANDARDS MODELS
// =============================================================================

model EngineeringStandard {
  id          String           @id @default(uuid())
  category    StandardCategory @unique
  title       String
  description String           @db.Text
  principles  Json             // Array of { title, description, examples? }
  version     String           @default("2026")
  isActive    Boolean          @default(true) @map("is_active")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  documentMappings DocumentTypeStandard[]

  @@index([category])
  @@index([isActive])
  @@map("engineering_standards")
}

model DocumentTypeStandard {
  id             String   @id @default(uuid())
  documentTypeId String   @map("document_type_id")
  standardId     String   @map("standard_id")
  priority       Int      @default(0)
  sectionTitle   String?  @map("section_title")
  isRequired     Boolean  @default(true) @map("is_required")
  createdAt      DateTime @default(now()) @map("created_at")

  documentType DocumentType        @relation(fields: [documentTypeId], references: [id], onDelete: Cascade)
  standard     EngineeringStandard @relation(fields: [standardId], references: [id], onDelete: Cascade)

  @@unique([documentTypeId, standardId])
  @@index([documentTypeId])
  @@index([standardId])
  @@map("document_type_standards")
}